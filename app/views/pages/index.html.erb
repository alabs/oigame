            <div id="izquierda" >
              <h4><%= link_to campaign.name, campaign %></h4>
            </div>

            <div id="derecha">
              <%= link_to(campaign) do %>
                <div id="avatar">
                  <img src="<%= avatar_url(campaign.user.email) %>" alt="creador de campaña"/>
                  <h4><%= campaign.user.name %></h4>
                </div>
              <% end %>
            </div>

          </div><!-- carousel-caption -->

          <div class="mask">
            <h4><%= campaign.name %></h4>
            <p><%= campaign.intro %></p>
            <%= link_to 'Firmar campaña', campaign %>
          </div>

        </div>
      </li>
    <% end %>
  </ul>
